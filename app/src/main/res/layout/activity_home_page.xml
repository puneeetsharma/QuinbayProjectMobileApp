<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePageActivity">
<!--    <ListView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:id="@+id/list_view">-->

<!--    </ListView>-->
    <RelativeLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >


        <HorizontalScrollView
            android:id="@+id/horizontalScrollViewForSale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_sale1"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/sale1"></ImageView>

                <ImageView
                    android:id="@+id/iv_sale2"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/sale2"></ImageView>

                <ImageView
                    android:id="@+id/iv_sale3"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/sale3">
                </ImageView>

                <ImageView
                    android:id="@+id/iv_sale4"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/sale4">
                </ImageView>

                <ImageView
                    android:id="@+id/iv_sale5"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/sale5">
                </ImageView>

            </LinearLayout>

        </HorizontalScrollView>

        <HorizontalScrollView
            android:id="@+id/horizontalScrollViewforCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="240dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_electronics"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/electronics"></ImageView>

                <ImageView
                    android:id="@+id/iv_fashion"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/fashion"></ImageView>

                <ImageView
                    android:id="@+id/iv_mobile"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/mobile"></ImageView>

                <ImageView
                    android:id="@+id/iv_laptop"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/laptops"></ImageView>

                <ImageView
                    android:id="@+id/iv_home"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/home"></ImageView>

                <ImageView
                    android:id="@+id/iv_beauty"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/beauty"></ImageView>

                <ImageView
                    android:id="@+id/iv_pharmacy"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/pharmacy"></ImageView>
            </LinearLayout>

        </HorizontalScrollView>

    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/homepageproducts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="380dp">

    </androidx.recyclerview.widget.RecyclerView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>
